<Window x:Class="Citizen_Benefits_Management_System.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Citizen_Benefits_Management_System"
        mc:Ignorable="d"
        Title="Система учета льготных категорий граждан" 
        Height="700" Width="1200"
        MinHeight="600" MinWidth="1000"
        WindowStartupLocation="CenterScreen"
        WindowState="Maximized"
        Background="{StaticResource BackgroundColor}"
        Loaded="Window_Loaded"
        Closing="Window_Closing">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Верхняя панель -->
        <Border Grid.Row="0" Background="{StaticResource PrimaryColor}" Padding="15,10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0" Orientation="Horizontal">
                    <TextBlock Text="Система учета льготных категорий граждан" 
                              FontSize="20" 
                              FontWeight="Bold" 
                              Foreground="White"
                              VerticalAlignment="Center"/>
                </StackPanel>

                <StackPanel Grid.Column="1" Orientation="Horizontal">
                    <TextBlock x:Name="TxtUserInfo" 
                              FontSize="14" 
                              Foreground="White"
                              VerticalAlignment="Center"
                              Margin="0,0,20,0"/>
                    <Button x:Name="BtnLogout" 
                           Content="Выход" 
                           Style="{StaticResource SecondaryButton}"
                           Click="BtnLogout_Click"
                           Padding="15,5"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Основное содержимое -->
        <Grid Grid.Row="1" Margin="20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="250"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Боковое меню -->
            <Border Grid.Column="0" 
                    Background="White" 
                    CornerRadius="8"
                    Padding="10"
                    Margin="0,0,10,0">
                <StackPanel>
                    <TextBlock Text="Меню" 
                              Style="{StaticResource SubHeaderText}"
                              Margin="10,10,10,20"/>

                    <Button x:Name="BtnCitizens" 
                           Content="Граждане" 
                           Style="{StaticResource PrimaryButton}"
                           HorizontalAlignment="Stretch"
                           Click="BtnCitizens_Click"
                           Margin="5"/>

                    <Button x:Name="BtnBenefits" 
                           Content="Льготы" 
                           Style="{StaticResource PrimaryButton}"
                           HorizontalAlignment="Stretch"
                           Click="BtnBenefits_Click"
                           Margin="5"/>

                    <Button x:Name="BtnCategories" 
                           Content="Категории льгот" 
                           Style="{StaticResource PrimaryButton}"
                           HorizontalAlignment="Stretch"
                           Click="BtnCategories_Click"
                           Margin="5"/>

                    <Button x:Name="BtnCertificates" 
                           Content="Справки" 
                           Style="{StaticResource PrimaryButton}"
                           HorizontalAlignment="Stretch"
                           Click="BtnCertificates_Click"
                           Margin="5"/>

                    <Button x:Name="BtnEventLog" 
                           Content="Журнал событий" 
                           Style="{StaticResource PrimaryButton}"
                           HorizontalAlignment="Stretch"
                           Click="BtnEventLog_Click"
                           Margin="5"/>

                    <Button x:Name="BtnReports" 
                           Content="Отчеты" 
                           Style="{StaticResource PrimaryButton}"
                           HorizontalAlignment="Stretch"
                           Click="BtnReports_Click"
                           Margin="5"/>

                    <Separator Margin="5,20,5,20"/>

                    <Button x:Name="BtnUsers" 
                           Content="Пользователи" 
                           Style="{StaticResource SecondaryButton}"
                           HorizontalAlignment="Stretch"
                           Click="BtnUsers_Click"
                           Margin="5"/>
                </StackPanel>
            </Border>

            <!-- Рабочая область -->
            <Border Grid.Column="1" 
                    Background="White" 
                    CornerRadius="8"
                    Padding="20">
                <Grid>
                    <StackPanel x:Name="PanelWelcome" VerticalAlignment="Center" HorizontalAlignment="Center">
                        <TextBlock Text="Добро пожаловать!" 
                                  Style="{StaticResource HeaderText}"
                                  HorizontalAlignment="Center"/>
                        <TextBlock x:Name="TxtWelcomeMessage" 
                                  FontSize="16"
                                  Foreground="{StaticResource TextSecondaryColor}"
                                  TextAlignment="Center"
                                  TextWrapping="Wrap"
                                  MaxWidth="600"/>
                        <TextBlock Text="Выберите раздел в меню слева для начала работы" 
                                  FontSize="14"
                                  Foreground="{StaticResource TextSecondaryColor}"
                                  TextAlignment="Center"
                                  Margin="0,20,0,0"/>
                    </StackPanel>

                    <!-- Здесь будет отображаться содержимое выбранного раздела -->
                    <Frame x:Name="MainFrame" 
                          NavigationUIVisibility="Hidden"
                          Visibility="Collapsed"/>
                </Grid>
            </Border>
        </Grid>

        <!-- Нижняя панель -->
        <Border Grid.Row="2" 
                Background="{StaticResource PrimaryDarkColor}" 
                Padding="15,8">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Column="0" 
                          Text="© 2025 Система учета льготных категорий граждан" 
                          FontSize="12" 
                          Foreground="White"
                          VerticalAlignment="Center"/>

                <TextBlock Grid.Column="1" 
                          x:Name="TxtCurrentTime"
                          FontSize="12" 
                          Foreground="White"
                          VerticalAlignment="Center"/>
            </Grid>
        </Border>
    </Grid>
</Window>
