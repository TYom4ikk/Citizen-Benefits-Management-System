<Window x:Class="Citizen_Benefits_Management_System.View.BenefitCategoryEditWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Citizen_Benefits_Management_System.View"
        mc:Ignorable="d"
        Title="Редактирование категории льгот" 
        Height="350" Width="550"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Background="{StaticResource BackgroundColor}">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Заголовок -->
        <TextBlock Grid.Row="0" 
                   x:Name="TxtTitle"
                   Text="Добавление категории льгот" 
                   Style="{StaticResource HeaderText}"
                   Margin="0,0,0,20"/>

        <!-- Форма -->
        <Border Grid.Row="1" 
                Background="White" 
                CornerRadius="8" 
                Padding="20">
            <StackPanel>
                <!-- Название категории -->
                <TextBlock Text="Название категории *" 
                          Style="{StaticResource LabelText}"/>
                <TextBox x:Name="TxtCategoryName" 
                        Style="{StaticResource ModernTextBox}"
                        MaxLength="100"
                        Margin="0,5,0,15"/>

                <!-- Описание -->
                <TextBlock Text="Описание" 
                          Style="{StaticResource LabelText}"/>
                <TextBox x:Name="TxtDescription" 
                        Style="{StaticResource ModernTextBox}"
                        MaxLength="500"
                        Height="120"
                        TextWrapping="Wrap"
                        AcceptsReturn="True"
                        VerticalScrollBarVisibility="Auto"
                        Margin="0,5,0,15"/>

                <TextBlock Text="* - обязательные поля" 
                          FontSize="12"
                          Foreground="{StaticResource TextSecondaryColor}"
                          FontStyle="Italic"/>
            </StackPanel>
        </Border>

        <!-- Кнопки -->
        <StackPanel Grid.Row="2" 
                   Orientation="Horizontal" 
                   HorizontalAlignment="Right"
                   Margin="0,20,0,0">
            <Button Content="Сохранить" 
                   Style="{StaticResource PrimaryButton}"
                   Click="BtnSave_Click"
                   Width="120"
                   Margin="0,0,10,0"/>
            <Button Content="Отмена" 
                   Style="{StaticResource SecondaryButton}"
                   Click="BtnCancel_Click"
                   Width="120"/>
        </StackPanel>
    </Grid>
</Window>
