<Window x:Class="Citizen_Benefits_Management_System.View.CertificateViewWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Citizen_Benefits_Management_System.View"
        mc:Ignorable="d"
        Title="Просмотр справки" 
        Height="450" Width="600"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Background="{StaticResource BackgroundColor}">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Заголовок -->
        <TextBlock Grid.Row="0" 
                   Text="Информация о справке" 
                   Style="{StaticResource HeaderText}"
                   Margin="0,0,0,20"/>

        <!-- Информация -->
        <Border Grid.Row="1" 
                Background="White" 
                CornerRadius="8" 
                Padding="20">
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <StackPanel>
                    <!-- Номер справки -->
                    <TextBlock Text="Номер справки:" 
                              Style="{StaticResource LabelText}"/>
                    <TextBlock x:Name="TxtCertificateNumber" 
                              FontSize="14"
                              Margin="0,5,0,15"/>

                    <!-- ФИО гражданина -->
                    <TextBlock Text="ФИО гражданина:" 
                              Style="{StaticResource LabelText}"/>
                    <TextBlock x:Name="TxtCitizenName" 
                              FontSize="14"
                              Margin="0,5,0,15"/>

                    <!-- СНИЛС -->
                    <TextBlock Text="СНИЛС:" 
                              Style="{StaticResource LabelText}"/>
                    <TextBlock x:Name="TxtSNILS" 
                              FontSize="14"
                              Margin="0,5,0,15"/>

                    <!-- Тип справки -->
                    <TextBlock Text="Тип справки:" 
                              Style="{StaticResource LabelText}"/>
                    <TextBlock x:Name="TxtCertificateType" 
                              FontSize="14"
                              Margin="0,5,0,15"/>

                    <!-- Дата выдачи -->
                    <TextBlock Text="Дата выдачи:" 
                              Style="{StaticResource LabelText}"/>
                    <TextBlock x:Name="TxtIssueDate" 
                              FontSize="14"
                              Margin="0,5,0,15"/>

                    <!-- Выдал -->
                    <TextBlock Text="Выдал:" 
                              Style="{StaticResource LabelText}"/>
                    <TextBlock x:Name="TxtIssuedBy" 
                              FontSize="14"
                              Margin="0,5,0,15"/>

                    <!-- Примечания -->
                    <TextBlock Text="Примечания:" 
                              Style="{StaticResource LabelText}"/>
                    <TextBlock x:Name="TxtNotes" 
                              FontSize="14"
                              TextWrapping="Wrap"
                              Margin="0,5,0,0"/>
                </StackPanel>
            </ScrollViewer>
        </Border>

        <!-- Кнопки -->
        <StackPanel Grid.Row="2" 
                   Orientation="Horizontal" 
                   HorizontalAlignment="Right"
                   Margin="0,20,0,0">
            <Button Content="Закрыть" 
                   Style="{StaticResource PrimaryButton}"
                   Click="BtnClose_Click"
                   Width="120"/>
        </StackPanel>
    </Grid>
</Window>
