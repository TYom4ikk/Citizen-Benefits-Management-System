<Page x:Class="Citizen_Benefits_Management_System.View.ReportsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Citizen_Benefits_Management_System.View"
      mc:Ignorable="d" 
      d:DesignHeight="600" d:DesignWidth="900"
      Title="Отчеты"
      Loaded="Page_Loaded">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Заголовок -->
        <TextBlock Grid.Row="0" 
                   Text="Формирование отчетов" 
                   Style="{StaticResource HeaderText}"
                   Margin="0,0,0,20"/>

        <!-- Содержимое -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel>
                <!-- Отчет по льготным категориям граждан -->
                <Border Background="White" 
                        CornerRadius="8" 
                        Padding="20"
                        Margin="0,0,0,15">
                    <StackPanel>
                        <TextBlock Text="Отчет по льготным категориям граждан" 
                                  Style="{StaticResource SubHeaderText}"
                                  Margin="0,0,0,10"/>
                        <TextBlock Text="Формирует отчет со списком всех граждан, имеющих льготы, с указанием категории льгот, даты начала и окончания периода действия льготы."
                                  TextWrapping="Wrap"
                                  Foreground="{StaticResource TextSecondaryColor}"
                                  Margin="0,0,0,15"/>
                        
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <TextBlock Grid.Row="0" Grid.Column="0"
                                      Text="Категория льгот:" 
                                      VerticalAlignment="Center" 
                                      Margin="0,0,10,10"/>
                            <ComboBox Grid.Row="0" Grid.Column="1"
                                     x:Name="CmbBenefitCategory" 
                                     Width="300"
                                     HorizontalAlignment="Left"
                                     Style="{StaticResource ModernComboBox}"
                                     Margin="0,0,0,10"/>

                            <TextBlock Grid.Row="1" Grid.Column="0"
                                      Text="Регион:" 
                                      VerticalAlignment="Center" 
                                      Margin="0,0,10,0"/>
                            <ComboBox Grid.Row="1" Grid.Column="1"
                                     x:Name="CmbRegion" 
                                     Width="300"
                                     HorizontalAlignment="Left"
                                     Style="{StaticResource ModernComboBox}"/>
                        </Grid>

                        <StackPanel Orientation="Horizontal" Margin="0,15,0,0">
                            <Button Content="Экспорт в Word" 
                                   Style="{StaticResource PrimaryButton}"
                                   Click="BtnExportBenefitsToWord_Click"
                                   Padding="15,8"
                                   Margin="0,0,10,0"/>
                            <Button Content="Экспорт в Excel" 
                                   Style="{StaticResource PrimaryButton}"
                                   Click="BtnExportBenefitsToExcel_Click"
                                   Padding="15,8"/>
                        </StackPanel>
                    </StackPanel>
                </Border>

                <!-- Отчет по справкам -->
                <Border Background="White" 
                        CornerRadius="8" 
                        Padding="20"
                        Margin="0,0,0,15">
                    <StackPanel>
                        <TextBlock Text="Отчет по выданным справкам" 
                                  Style="{StaticResource SubHeaderText}"
                                  Margin="0,0,0,10"/>
                        <TextBlock Text="Формирует отчет о выданных справках за указанный период с указанием типа справки и ФИО гражданина."
                                  TextWrapping="Wrap"
                                  Foreground="{StaticResource TextSecondaryColor}"
                                  Margin="0,0,0,15"/>
                        
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="Период с:" 
                                      VerticalAlignment="Center" 
                                      Margin="0,0,10,0"/>
                            <DatePicker x:Name="DpCertStartDate" 
                                       Width="150"
                                       Margin="0,0,10,0"/>

                            <TextBlock Text="по:" 
                                      VerticalAlignment="Center" 
                                      Margin="0,0,10,0"/>
                            <DatePicker x:Name="DpCertEndDate" 
                                       Width="150"/>
                        </StackPanel>

                        <Button Content="Экспорт в Excel" 
                               Style="{StaticResource PrimaryButton}"
                               Click="BtnExportCertificatesToExcel_Click"
                               Padding="15,8"
                               Margin="0,15,0,0"
                               HorizontalAlignment="Left"/>
                    </StackPanel>
                </Border>

                <!-- Статистика по категориям -->
                <Border Background="White" 
                        CornerRadius="8" 
                        Padding="20"
                        Margin="0,0,0,15">
                    <StackPanel>
                        <TextBlock Text="Статистика по категориям льгот" 
                                  Style="{StaticResource SubHeaderText}"
                                  Margin="0,0,0,10"/>
                        <TextBlock Text="Формирует диаграмму распределения граждан по категориям льгот."
                                  TextWrapping="Wrap"
                                  Foreground="{StaticResource TextSecondaryColor}"
                                  Margin="0,0,0,15"/>

                        <Button Content="Сформировать диаграмму" 
                               Style="{StaticResource PrimaryButton}"
                               Click="BtnGenerateChart_Click"
                               Padding="15,8"
                               HorizontalAlignment="Left"/>
                    </StackPanel>
                </Border>

                <!-- Статистика -->
                <Border Background="{StaticResource BackgroundColor}" 
                        CornerRadius="8" 
                        Padding="20">
                    <StackPanel>
                        <TextBlock Text="Общая статистика" 
                                  Style="{StaticResource SubHeaderText}"
                                  Margin="0,0,0,15"/>
                        
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <StackPanel Grid.Column="0">
                                <TextBlock Text="Всего граждан:" 
                                          FontWeight="Bold"
                                          Margin="0,0,0,5"/>
                                <TextBlock x:Name="TxtTotalCitizens" 
                                          Text="0"
                                          FontSize="24"
                                          Foreground="{StaticResource PrimaryColor}"/>
                            </StackPanel>

                            <StackPanel Grid.Column="1">
                                <TextBlock Text="Всего льготников:" 
                                          FontWeight="Bold"
                                          Margin="0,0,0,5"/>
                                <TextBlock x:Name="TxtTotalBeneficiaries" 
                                          Text="0"
                                          FontSize="24"
                                          Foreground="{StaticResource PrimaryColor}"/>
                            </StackPanel>

                            <StackPanel Grid.Column="2">
                                <TextBlock Text="Выдано справок:" 
                                          FontWeight="Bold"
                                          Margin="0,0,0,5"/>
                                <TextBlock x:Name="TxtTotalCertificates" 
                                          Text="0"
                                          FontSize="24"
                                          Foreground="{StaticResource PrimaryColor}"/>
                            </StackPanel>
                        </Grid>
                    </StackPanel>
                </Border>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Page>
