<Window x:Class="Citizen_Benefits_Management_System.View.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Авторизация - Система учета льготных категорий граждан" 
        Height="600" Width="500"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Background="{StaticResource BackgroundColor}">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Заголовок -->
        <Border Grid.Row="0" Background="{StaticResource PrimaryColor}" Padding="20">
            <StackPanel>
                <TextBlock Text="Система учета льготных категорий граждан" 
                          FontSize="18" 
                          FontWeight="Bold" 
                          Foreground="White"
                          TextAlignment="Center"
                          TextWrapping="Wrap"/>
                <TextBlock Text="Авторизация в системе" 
                          FontSize="14" 
                          Foreground="White"
                          TextAlignment="Center"
                          Margin="0,5,0,0"/>
            </StackPanel>
        </Border>

        <!-- Форма авторизации -->
        <Border Grid.Row="1" 
                Background="White" 
                Margin="40,30,40,40"
                Padding="30"
                CornerRadius="8">
            <Border.Effect>
                <DropShadowEffect Color="Gray" Direction="270" ShadowDepth="3" Opacity="0.3" BlurRadius="10"/>
            </Border.Effect>
            <StackPanel VerticalAlignment="Center">
                <TextBlock Text="Вход в систему" 
                          Style="{StaticResource SubHeaderText}"
                          HorizontalAlignment="Center"
                          Margin="0,0,0,30"/>

                <!-- Имя пользователя -->
                <Label Content="Имя пользователя:" 
                       Style="{StaticResource ModernLabel}"/>
                <TextBox x:Name="TxtUsername" 
                        Style="{StaticResource ModernTextBox}"
                        TabIndex="0"
                        KeyDown="TxtUsername_KeyDown"/>

                <!-- Пароль -->
                <Label Content="Пароль:" 
                       Style="{StaticResource ModernLabel}"
                       Margin="0,15,0,0"/>
                <PasswordBox x:Name="TxtPassword" 
                            Style="{StaticResource ModernPasswordBox}"
                            TabIndex="1"
                            KeyDown="TxtPassword_KeyDown"/>

                <!-- Сообщение об ошибке -->
                <TextBlock x:Name="TxtError" 
                          Foreground="{StaticResource ErrorColor}"
                          FontSize="12"
                          Margin="5,10,5,0"
                          TextWrapping="Wrap"
                          Visibility="Collapsed"/>

                <!-- Кнопки -->
                <StackPanel Orientation="Horizontal" 
                           HorizontalAlignment="Center"
                           Margin="0,30,0,0">
                    <Button x:Name="BtnLogin" 
                           Content="Войти" 
                           Style="{StaticResource PrimaryButton}"
                           Width="120"
                           TabIndex="2"
                           Click="BtnLogin_Click"/>
                    <Button x:Name="BtnCancel" 
                           Content="Отмена" 
                           Style="{StaticResource SecondaryButton}"
                           Width="120"
                           TabIndex="3"
                           Click="BtnCancel_Click"/>
                </StackPanel>

                <!-- Информация -->
                <TextBlock Text="Для входа используйте учетные данные" 
                          FontSize="11"
                          Foreground="{StaticResource TextSecondaryColor}"
                          TextAlignment="Center"
                          Margin="0,20,0,0"
                          TextWrapping="Wrap"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>
