<Window x:Class="Citizen_Benefits_Management_System.View.CertificateEditWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Citizen_Benefits_Management_System.View"
        mc:Ignorable="d"
        Title="Регистрация справки" 
        Height="450" Width="600"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Background="{StaticResource BackgroundColor}">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Заголовок -->
        <TextBlock Grid.Row="0" 
                   Text="Регистрация справки" 
                   Style="{StaticResource HeaderText}"
                   Margin="0,0,0,20"/>

        <!-- Форма -->
        <Border Grid.Row="1" 
                Background="White" 
                CornerRadius="8" 
                Padding="20">
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <StackPanel>
                    <!-- Гражданин -->
                    <TextBlock Text="Гражданин *" 
                              Style="{StaticResource LabelText}"/>
                    <Grid Margin="0,5,0,15">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <TextBox x:Name="TxtCitizenName" 
                                Grid.Column="0"
                                Style="{StaticResource ModernTextBox}"
                                IsReadOnly="True"/>
                        <Button Grid.Column="1"
                               Content="Выбрать"
                               Style="{StaticResource SecondaryButton}"
                               Click="BtnSelectCitizen_Click"
                               Margin="10,0,0,0"
                               Padding="15,8"/>
                    </Grid>

                    <!-- Тип справки -->
                    <TextBlock Text="Тип справки *" 
                              Style="{StaticResource LabelText}"/>
                    <ComboBox x:Name="CmbCertificateType" 
                             Style="{StaticResource ModernComboBox}"
                             Margin="0,5,0,15"/>

                    <!-- Дата выдачи -->
                    <TextBlock Text="Дата выдачи *" 
                              Style="{StaticResource LabelText}"/>
                    <DatePicker x:Name="DpIssueDate" 
                               Margin="0,5,0,15"/>

                    <!-- Примечания -->
                    <TextBlock Text="Примечания" 
                              Style="{StaticResource LabelText}"/>
                    <TextBox x:Name="TxtNotes" 
                            Style="{StaticResource ModernTextBox}"
                            Height="100"
                            TextWrapping="Wrap"
                            AcceptsReturn="True"
                            VerticalScrollBarVisibility="Auto"
                            Margin="0,5,0,15"/>

                    <TextBlock Text="* - обязательные поля" 
                              FontSize="12"
                              Foreground="{StaticResource TextSecondaryColor}"
                              FontStyle="Italic"/>
                </StackPanel>
            </ScrollViewer>
        </Border>

        <!-- Кнопки -->
        <StackPanel Grid.Row="2" 
                   Orientation="Horizontal" 
                   HorizontalAlignment="Right"
                   Margin="0,20,0,0">
            <Button Content="Зарегистрировать" 
                   Style="{StaticResource PrimaryButton}"
                   Click="BtnSave_Click"
                   Width="150"
                   Margin="0,0,10,0"/>
            <Button Content="Отмена" 
                   Style="{StaticResource SecondaryButton}"
                   Click="BtnCancel_Click"
                   Width="120"/>
        </StackPanel>
    </Grid>
</Window>
