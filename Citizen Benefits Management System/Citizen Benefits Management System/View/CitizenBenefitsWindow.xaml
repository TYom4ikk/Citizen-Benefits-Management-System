<Window x:Class="Citizen_Benefits_Management_System.View.CitizenBenefitsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Управление льготами гражданина" 
        Height="600" Width="900"
        WindowStartupLocation="CenterScreen"
        Background="{StaticResource BackgroundColor}">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Заголовок -->
        <Border Grid.Row="0" Background="{StaticResource PrimaryColor}" Padding="20">
            <StackPanel>
                <TextBlock x:Name="TxtTitle"
                          Text="Управление льготами гражданина" 
                          FontSize="20" 
                          FontWeight="Bold" 
                          Foreground="White"/>
                <TextBlock x:Name="TxtCitizenInfo"
                          FontSize="14" 
                          Foreground="White"
                          Margin="0,5,0,0"/>
            </StackPanel>
        </Border>

        <!-- Панель управления -->
        <Border Grid.Row="1" 
                Background="White" 
                Padding="15" 
                Margin="20,20,20,10"
                CornerRadius="4"
                BorderBrush="{StaticResource DividerColor}"
                BorderThickness="1">
            <StackPanel Orientation="Horizontal">
                <Button x:Name="BtnAddBenefit"
                       Content="+ Добавить льготу" 
                       Style="{StaticResource PrimaryButton}"
                       Click="BtnAddBenefit_Click"/>
                <Button x:Name="BtnRefresh"
                       Content="Обновить" 
                       Style="{StaticResource SecondaryButton}"
                       Click="BtnRefresh_Click"
                       Margin="10,0,0,0"/>
            </StackPanel>
        </Border>

        <!-- Таблица льгот -->
        <Border Grid.Row="2" 
                Background="White"
                Margin="20,0,20,20"
                CornerRadius="4"
                BorderBrush="{StaticResource DividerColor}"
                BorderThickness="1">
            <Grid>
                <DataGrid x:Name="DgBenefits" 
                         Style="{StaticResource ModernDataGrid}"
                         AutoGenerateColumns="False">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="ID" 
                                          Binding="{Binding CitizenBenefitID}" 
                                          Width="60"
                                          HeaderStyle="{StaticResource DataGridColumnHeaderStyle}"/>
                        <DataGridTextColumn Header="Категория льготы" 
                                          Binding="{Binding BenefitCategories.CategoryName}" 
                                          Width="200"
                                          HeaderStyle="{StaticResource DataGridColumnHeaderStyle}"/>
                        <DataGridTextColumn Header="Дата начала" 
                                          Binding="{Binding StartDate, StringFormat=dd.MM.yyyy}" 
                                          Width="130"
                                          HeaderStyle="{StaticResource DataGridColumnHeaderStyle}"/>
                        <DataGridTextColumn Header="Дата окончания" 
                                          Binding="{Binding EndDate, StringFormat=dd.MM.yyyy}" 
                                          Width="130"
                                          HeaderStyle="{StaticResource DataGridColumnHeaderStyle}"/>
                        <DataGridTextColumn Header="Номер льготы" 
                                          Binding="{Binding BenefitNumber}" 
                                          Width="150"
                                          HeaderStyle="{StaticResource DataGridColumnHeaderStyle}"/>
                        <DataGridTextColumn Header="Статус" 
                                              Binding="{Binding Status}" 
                                              Width="100"
                                              HeaderStyle="{StaticResource DataGridColumnHeaderStyle}"/>
                        <DataGridTemplateColumn Header="Действия" 
                                              Width="*"
                                              HeaderStyle="{StaticResource DataGridColumnHeaderStyle}">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                        <Button Content="Редактировать" 
                                               Style="{StaticResource SecondaryButton}"
                                               Click="BtnEdit_Click"
                                               Tag="{Binding CitizenBenefitID}"
                                               Padding="10,5"
                                               Margin="2"/>
                                        <Button Content="Деактивировать" 
                                               Style="{StaticResource SecondaryButton}"
                                               Click="BtnDeactivate_Click"
                                               Tag="{Binding CitizenBenefitID}"
                                               Padding="10,5"
                                               Margin="2"/>
                                        <Button Content="Удалить" 
                                               Style="{StaticResource SecondaryButton}"
                                               Click="BtnDelete_Click"
                                               Tag="{Binding CitizenBenefitID}"
                                               Padding="10,5"
                                               Margin="2"/>
                                    </StackPanel>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                    </DataGrid.Columns>
                </DataGrid>

                <!-- Сообщение когда нет данных -->
                <TextBlock x:Name="TxtNoData"
                          Text="У гражданина нет назначенных льгот"
                          FontSize="16"
                          Foreground="{StaticResource TextSecondaryColor}"
                          HorizontalAlignment="Center"
                          VerticalAlignment="Center"
                          Visibility="Collapsed"/>
            </Grid>
        </Border>

        <!-- Кнопка закрытия -->
        <Border Grid.Row="3" 
                Background="White" 
                Padding="20"
                BorderBrush="{StaticResource DividerColor}"
                BorderThickness="0,1,0,0">
            <Button x:Name="BtnClose" 
                   Content="Закрыть" 
                   Style="{StaticResource SecondaryButton}"
                   Width="120"
                   HorizontalAlignment="Right"
                   Click="BtnClose_Click"/>
        </Border>
    </Grid>
</Window>
