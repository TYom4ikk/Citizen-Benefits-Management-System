<Window x:Class="Citizen_Benefits_Management_System.View.CitizenSelectWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Citizen_Benefits_Management_System.View"
        mc:Ignorable="d"
        Title="Выбор гражданина" 
        Height="500" Width="700"
        WindowStartupLocation="CenterScreen"
        Background="{StaticResource BackgroundColor}"
        Loaded="Window_Loaded">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Заголовок -->
        <TextBlock Grid.Row="0" 
                   Text="Выбор гражданина" 
                   Style="{StaticResource HeaderText}"
                   Margin="0,0,0,20"/>

        <!-- Поиск -->
        <Border Grid.Row="1" 
                Background="White" 
                Padding="15" 
                CornerRadius="8"
                Margin="0,0,0,15">
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="Поиск по ФИО:" 
                          VerticalAlignment="Center" 
                          Margin="0,0,10,0"/>
                <TextBox x:Name="TxtSearch" 
                        Width="400" 
                        Style="{StaticResource ModernTextBox}"
                        TextChanged="TxtSearch_TextChanged"/>
            </StackPanel>
        </Border>

        <!-- Список граждан -->
        <DataGrid Grid.Row="2" 
                 x:Name="DgCitizens"
                 Style="{StaticResource ModernDataGrid}"
                 AutoGenerateColumns="False"
                 IsReadOnly="True"
                 SelectionMode="Single"
                 CanUserAddRows="False"
                 CanUserDeleteRows="False"
                 MouseDoubleClick="DgCitizens_MouseDoubleClick">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" 
                                   Binding="{Binding CitizenID}" 
                                   Width="60"/>
                <DataGridTextColumn Header="Фамилия" 
                                   Binding="{Binding LastName}" 
                                   Width="*"/>
                <DataGridTextColumn Header="Имя" 
                                   Binding="{Binding FirstName}" 
                                   Width="*"/>
                <DataGridTextColumn Header="Отчество" 
                                   Binding="{Binding MiddleName}" 
                                   Width="*"/>
                <DataGridTextColumn Header="СНИЛС" 
                                   Binding="{Binding SNILS}" 
                                   Width="150"/>
            </DataGrid.Columns>
        </DataGrid>

        <!-- Кнопки -->
        <StackPanel Grid.Row="3" 
                   Orientation="Horizontal" 
                   HorizontalAlignment="Right"
                   Margin="0,20,0,0">
            <Button Content="Выбрать" 
                   Style="{StaticResource PrimaryButton}"
                   Click="BtnSelect_Click"
                   Width="120"
                   Margin="0,0,10,0"/>
            <Button Content="Отмена" 
                   Style="{StaticResource SecondaryButton}"
                   Click="BtnCancel_Click"
                   Width="120"/>
        </StackPanel>
    </Grid>
</Window>
