<Page x:Class="Citizen_Benefits_Management_System.View.UsersPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Citizen_Benefits_Management_System.View"
      mc:Ignorable="d" 
      d:DesignHeight="600" d:DesignWidth="900"
      Title="Управление пользователями"
      Loaded="Page_Loaded">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Заголовок -->
        <TextBlock Grid.Row="0" 
                   Text="Управление пользователями" 
                   Style="{StaticResource HeaderText}"
                   Margin="0,0,0,20"/>

        <!-- Панель поиска и фильтрации -->
        <Border Grid.Row="1" 
                Background="{StaticResource BackgroundColor}" 
                Padding="15" 
                CornerRadius="8"
                Margin="0,0,0,15">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0" Orientation="Horizontal">
                    <TextBlock Text="Поиск:" 
                              VerticalAlignment="Center" 
                              Margin="0,0,10,0"/>
                    <TextBox x:Name="TxtSearch" 
                            Width="300" 
                            Style="{StaticResource ModernTextBox}"
                            TextChanged="TxtSearch_TextChanged"/>

                    <TextBlock Text="Роль:" 
                              VerticalAlignment="Center" 
                              Margin="20,0,10,0"/>
                    <ComboBox x:Name="CmbRole" 
                             Width="200" 
                             Style="{StaticResource ModernComboBox}"
                             SelectionChanged="CmbRole_SelectionChanged"/>

                    <Button Content="Очистить" 
                           Style="{StaticResource SecondaryButton}"
                           Click="BtnClearFilters_Click"
                           Margin="10,0,0,0"
                           Padding="15,8"/>
                </StackPanel>

                <Button Grid.Column="1" 
                       Content="+ Добавить пользователя" 
                       Style="{StaticResource PrimaryButton}"
                       Click="BtnAddUser_Click"
                       Padding="15,8"/>
            </Grid>
        </Border>

        <!-- Таблица пользователей -->
        <DataGrid Grid.Row="2" 
                 x:Name="DgUsers"
                 Style="{StaticResource ModernDataGrid}"
                 AutoGenerateColumns="False"
                 IsReadOnly="True"
                 SelectionMode="Single"
                 CanUserAddRows="False"
                 CanUserDeleteRows="False">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" 
                                   Binding="{Binding UserID}" 
                                   Width="60"/>
                <DataGridTextColumn Header="Логин" 
                                   Binding="{Binding Username}" 
                                   Width="150"/>
                <DataGridTextColumn Header="Фамилия" 
                                   Binding="{Binding LastName}" 
                                   Width="*"/>
                <DataGridTextColumn Header="Имя" 
                                   Binding="{Binding FirstName}" 
                                   Width="*"/>
                <DataGridTextColumn Header="Отчество" 
                                   Binding="{Binding MiddleName}" 
                                   Width="*"/>
                <DataGridTextColumn Header="Email" 
                                   Binding="{Binding Email}" 
                                   Width="200"/>
                <DataGridTextColumn Header="Роль" 
                                   Binding="{Binding RoleName}" 
                                   Width="150"/>
                <DataGridTextColumn Header="Последний вход" 
                                   Binding="{Binding LastLogin, StringFormat='dd.MM.yyyy HH:mm'}" 
                                   Width="150"/>
                <DataGridTemplateColumn Header="Действия" Width="200">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                <Button Content="Редактировать" 
                                       Style="{StaticResource SecondaryButton}"
                                       Click="BtnEdit_Click"
                                       Tag="{Binding UserID}"
                                       Margin="0,0,5,0"
                                       Padding="10,5"/>
                                <Button Content="Удалить" 
                                       Style="{StaticResource SecondaryButton}"
                                       Click="BtnDelete_Click"
                                       Tag="{Binding UserID}"
                                       Padding="10,5"/>
                            </StackPanel>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
        </DataGrid>

        <!-- Статистика -->
        <Border Grid.Row="3" 
                Background="{StaticResource BackgroundColor}" 
                Padding="15" 
                CornerRadius="8"
                Margin="0,15,0,0">
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="Всего пользователей: " 
                          FontWeight="Bold"/>
                <TextBlock x:Name="TxtTotalUsers" 
                          Text="0"
                          Margin="5,0,0,0"/>
            </StackPanel>
        </Border>
    </Grid>
</Page>
